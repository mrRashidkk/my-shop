@page
@model MyShop.Application.ArticlesAdmin.CreateArticle.Request
@{
}

    <div id="app">
        <div class="field">
            <label class="label">Title</label>
            <div class="control">
                <input class="input" v-model="article.title" />
            </div>
        </div>
        <div class="field">
            <label class="label">Preview</label>
            <div class="control">
                <textarea class="textarea" v-model="article.preview"></textarea>
            </div>
        </div>
        <div class="field">
            <label class="label">Text</label>
            <div class="control">
                <textarea class="textarea" style="min-height: 16em" v-model="article.text"></textarea>
            </div>
        </div>
        <div class="field">
            <div class="file has-name is-fullwidth">
                <label class="file-label">
                    <input class="file-input" type="file" name="resume" ref="image" @@change="handleFileUpload">
                    <span class="file-cta">
                        <span class="file-icon">
                            <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Upload an image
                        </span>
                    </span>
                    <span class="file-name">
                        {{imageName}}
                    </span>
                </label>
            </div>
        </div>        
        <div class="field">
            <div class="control has-text-right">
                <button class="button is-link" @@click="createArticle">Create</button>
            </div>
        </div>
    </div>

@section scripts {
    <script src="~/js/admin/articles-management.js"></script>
}
