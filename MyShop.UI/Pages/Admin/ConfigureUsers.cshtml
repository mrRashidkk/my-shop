@page
@model MyShop.UI.Pages.Admin.ConfigureUsersModel
@{
}

    <div id="app" class="container">

        <div class="column is-6 is-offset-3">
            <div class="field">
                <label class="label">User name</label>
                <div class="control">
                    <input class="input" v-model="username" />
                </div>
            </div>

            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" v-model="password" />
                </div>
            </div>

            <div class="field">
                <div class="control has-text-right">
                    <button class="button is-link" @@click="createUser">Create manager</button>
                </div>
            </div>
        </div>

    </div>



@section scripts {
    <script src="@Url.AddFingerPrint("~/js/admin/users.js")"></script>
}